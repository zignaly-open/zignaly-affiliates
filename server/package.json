    "lint": "eslint --ignore-path .gitignore ./",
    "lint-fix": "eslint --fix . --ext .js --ignore-path .gitignore .",
    "start": "nodemon --es-module-specifier-resolution=node index.js"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/aurelia/skeleton-navigation"
  },
  "author": "Alexander Mikhalchenko <alex@xfuturum.com>",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix && npm run test-no-upload"
    }
  },
  "dependencies": {
    "@sendgrid/mail": "^7.2.6",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.23.0",
    "composable-middleware": "^0.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.0.0",
    "express-paginate": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mocha": "^8.1.3",
    "moment": "^2.29.0",
    "mongoose": "^5.10.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^4.0.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "request": "^2.88.2",
    "superagent": "^6.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "20.1.0",
    "eslint-watch": "7.0.0",
    "husky": "^4.3.8",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "mockgoose": "^8.0.4",
    "mongodb-memory-server": "^6.7.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2"
  }
