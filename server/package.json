  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "cron": "node --es-module-specifier-resolution=node cron/events.js",
    "cron-payout": "node --es-module-specifier-resolution=node cron/payouts.js",
